@model DualDrill.Server.Controllers.EntityModel;
<script src="https://aframe.io/releases/1.6.0/aframe.min.js"></script>
<div>
    <a-scene xr-mode-ui="enabled: false">
        <a-camera position="0 0 3"></a-camera>
        @foreach (var p in Model.Points)
        {
            <a-sphere position="@p.Position.X @p.Position.Y @p.Position.Z" radius="0.05" color="@p.Color"></a-sphere>
        }
        @*
        <a-box position="-1 0.5 -3" rotation="0 45 0" color="#4CC3D9"></a-box>
        <a-sphere position="0 1.25 -5" radius="1.25" color="#EF2D5E"></a-sphere>
        <a-cylinder position="1 0.75 -3" radius="0.5" height="1.5" color="#FFC65D"></a-cylinder>
        <a-plane position="0 0 -4" rotation="-90 0 0" width="4" height="4" color="#7BC8A4"></a-plane>
        <a-entity line="start: 0 1 0; end: 2 0 -5; color: red"></a-entity>
        <a-entity line="start: -2 4 5; end: 0 4 -3; color: green"></a-entity> *@
        <a-sky color="#ECECEC"></a-sky>
    </a-scene>
</div>

<script>
    console.log("@Model.Text");
</script>
