@using System.Collections.Immutable;
@using Controller = DualDrill.Server.Controllers.GADevController;
@model int

@{
    ViewData["Title"] = "GA Dev";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<h3>inner product</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            @for (int i = 0; i < Model; i++)
            {
                <th>@Controller.GetName(i)</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model; i++)
        {
            <tr>
                <th>@Controller.GetName(i)</th>
                @for (int j = 0; j < Model; j++)
                {
                    <td>@Controller.Inner(i, j) </td>
                }
            </tr>
        }
    </tbody>
</table>

